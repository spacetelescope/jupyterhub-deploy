#! /usr/bin/bash

deployment_name=$1
account_id=$2
secrets_yaml=$3
environment=$4

# clear out and update the helm charts
rm -r hub/charts/*
helm dependency update hub

# TODO: can we maybe decrypt the file in place using sops?

tmp_decrypted=~/staging.yaml.decrypted

# have to be in the same directory as .sops.yaml
pushd $(dirname ${secrets_yaml})
sops --decrypt $(basename ${secrets_yaml}) > $tmp_decrypted

popd
helm upgrade --wait --install ${deployment_name}-${environment} hub -f deployments/${deployment_name}/config/common.yaml -f deployments/${deployment_name}/config/${environment}.yaml -f ${tmp_decrypted} --set-string jupyterhub.singleuser.image.name=${account_id}.dkr.ecr.us-east-1.amazonaws.com/${deployment_name}-user-image

rm ~/staging.yaml.decrypted

kubectl get svc proxy-public
